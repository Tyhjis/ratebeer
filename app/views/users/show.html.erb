<p id="notice"><%= notice %></p>

<p>
  <strong><%= @user.username %></strong><br>
  <% if not @user.ratings.nil? %>
    Has <%= pluralize(@user.ratings.count, 'rating') %>. Average: <%= @user.average_rating %>
<ul>      
<% @user.ratings.each do |rating| %>
     <li> <%= rating %>
       <% if @user == current_user %>
       <%= link_to 'delete', rating, method: :delete,  data: {confirm: 'Are you sure?'} %>
       <% end %>
     </li>
    <% end %>
</ul>
  <% end %>
<strong>Beer clubs</strong>
<ul>
  <% @user.beer_clubs.each do |club| %>
  <li>
    <%= link_to club.name, beer_club_path %>
  </li>
  <% end %>
</ul>
<% if not @user.favorite_beer.nil? %>
    <strong>Favorite beer:</strong> <%= @user.favorite_beer %> <br>
<% end %>
<% if not @user.favorite_style.nil? %>
    <strong>Favorite style:</strong> <%= @user.favorite_style %> <br>
<% end %>
<% if not @user.favorite_brewery.nil? %>
    <strong>Favorite brewery:</strong> <%= @user.favorite_brewery %> <br>
<% end %>
</p>
<%= link_to 'Back', users_path %> |
<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
